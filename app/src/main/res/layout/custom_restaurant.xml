<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dim_12dp"
        android:layout_marginEnd="@dimen/dim_12dp"
        android:layout_marginBottom="@dimen/dim_4dp"
        android:foreground="?selectableItemBackground"
        android:orientation="horizontal"
        android:padding="@dimen/dim_4dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/offer_image"
            android:layout_width="@dimen/dim_80"
            android:layout_height="@dimen/dim_80"
            android:layout_gravity="start"
            android:padding="@dimen/dim_4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="1dp"
            tools:src="@drawable/pic" />

        <LinearLayout
            android:layout_marginStart="-30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_background_gray"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dim_40dp"
            android:orientation="horizontal">
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <TextView
                   android:textAlignment="viewStart"
                   android:id="@+id/offer_name"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:textColor="@color/colorRedLight"
                   android:textSize="@dimen/txt_16sp"
                   android:textStyle="bold"
                   tools:text="Pizza"
                   />
               <RatingBar
                   android:id="@+id/restaurant_rating"
                   android:layout_width="wrap_content"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   style="?android:attr/ratingBarStyleSmall"
                   android:progressTint="@color/colorRedLight"
                   android:numStars="4"
                   android:rating="3"
                   />
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/colorWhite"
                       android:textSize="@dimen/txt_12sp"
                       android:textStyle="bold"
                       android:text="@string/min_order"
                       />
                   <TextView
                       android:layout_marginStart="@dimen/dim_4dp"
                       android:id="@+id/restaurant_min_order"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/colorWhite"
                       android:textSize="@dimen/txt_12sp"
                       android:textStyle="bold"
                       tools:text="20"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_marginBottom="@dimen/dim_4dp"
                   android:layout_width="wrap_content"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/colorWhite"
                       android:textSize="@dimen/txt_12sp"
                       android:textStyle="bold"
                       android:text="@string/cost"
                       />
                   <TextView
                       android:layout_marginStart="@dimen/dim_4dp"
                       android:id="@+id/restaurant_cost"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/colorWhite"
                       android:textSize="@dimen/txt_12sp"
                       android:textStyle="bold"
                       tools:text="50"
                       />
               </LinearLayout>
           </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                >

                <ImageView

                    android:id="@+id/restaurant_opened_circle"
                    android:layout_width="@dimen/album_dp_15"
                    android:layout_height="@dimen/album_dp_15"
                    android:src="@drawable/ic_circle_solid" />

                <TextView
                    android:id="@+id/restaurant_opened"
                    android:layout_marginStart="@dimen/album_dp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/opened"/>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
